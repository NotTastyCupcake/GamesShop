@model IEnumerable<GamesShop.Models.Store.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Список игр</h1>
<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Поиск: </label>
        <input name="gameName" class="form-control" />
        <div class="form-group">
            <label name="idDeveloper" class="control-label"></label>
            <select name="IdDeveloper" class ="form-control" asp-items="ViewBag.IdDeveloper">
                <option selected="selected" disabled="disabled">Выберите компанию</option>
            </select>
        </div>
        <div class="form-group">
            <label name="IdGenre" class="control-label"></label>
            <select name="IdGenre" class ="form-control" asp-items="ViewBag.IdGenre">
                <option selected="selected" disabled="disabled">Выберите компанию</option>
            </select>
        </div>

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<p>
    <a asp-action="Create">Добавить новую игру</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Developer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Описание</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
